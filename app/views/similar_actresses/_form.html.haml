= form_for @similar_actress do |f|
  - if @similar_actress.errors.any?
    #error_explanation
      %h2= "#{pluralize(@similar_actress.errors.count, "error")} prohibited this similar_actress from being saved:"
      %ul
        - @similar_actress.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
