= form_for @actress do |f|
  - if @actress.errors.any?
    #error_explanation
      %h2= "#{pluralize(@actress.errors.count, "error")} prohibited this actress from being saved:"
      %ul
        - @actress.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :text
    = f.text_field :text
  .field
    = f.label :display
    = f.check_box :display
  .actions
    = f.submit 'Save'
