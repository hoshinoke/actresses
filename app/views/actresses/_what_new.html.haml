:javascript
  var blogroll_channel_id = 106008;
%script{type: "text/javascript",charset: "utf-8",src: "http://blogroll.livedoor.net/js/blogroll.js"}
%link{rel: "stylesheet",type: "text/css",href: "http://blogroll.livedoor.net/css/default2.css"}

.span12
  %div{:class=>"well sidebar-nav"}
    %ul{:class=>"nav nav-list"}
      - Photo.table(:latest).sort_by{|t|t[:date]}.reverse.each do |t|
        - day = Time.parse(t[:date]) + (60*60*9) #tokyo
        %li
          = link_to actress_path(t[:name]) do
            %u
              = "#{day.month}/#{day.day}"
              = "「#{t[:name]}」#{t[:size]}枚追加！"
